<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.rtccloud.helper.fragment.LoginFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp" >

        <net.rtccloud.helper.view.FloatLabelLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:floatLabelTextAppearance="@style/TextAppearance.FloatLabel" >

            <EditText
                android:id="@+id/user_id"
                style="@style/Form.EditText"
                android:hint="@string/prompt_user_id" />
        </net.rtccloud.helper.view.FloatLabelLayout>

        <net.rtccloud.helper.view.FloatLabelLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:floatLabelTextAppearance="@style/TextAppearance.FloatLabel" >

            <EditText
                android:id="@+id/display_name"
                style="@style/Form.EditText"
                android:hint="@string/prompt_display_name" />
        </net.rtccloud.helper.view.FloatLabelLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/dividerHorizontal" />

    <Button
        android:id="@+id/log_in_button"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>